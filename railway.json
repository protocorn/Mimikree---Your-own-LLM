{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "llama_server/Dockerfile",
    "watchPatterns": [
      "llama_server/**"
    ]
  },
  "deploy": {
    "startCommand": "cd llama_server && python -m llama_service",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

